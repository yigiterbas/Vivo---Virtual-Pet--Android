<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Optionlayout"
        android:visibility="invisible"
        android:background="@mipmap/optionbackground">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/first2"
            android:layout_below="@+id/first1"></FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Notification"
            android:id="@+id/textView9"
            android:layout_alignParentStart="false"
            android:textColor="#FF34495E"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="45dp"
            android:textSize="20sp"
            android:layout_below="@+id/header2" />
        <com.game.hy.vivo.SwitchButton
            android:id="@+id/switch1"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/header2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sound"
            android:id="@+id/textView10"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="45dp"
            android:textColor="#FF34495E"
            android:layout_marginLeft="70dp"
            android:textSize="20sp"
            android:layout_alignParentLeft="false" />

        <com.game.hy.vivo.SwitchButton
            android:id="@+id/switch2"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/switch1"
            android:layout_alignParentRight="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vibration"
            android:id="@+id/textView33"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="40dp"
            android:textColor="#FF34495E"
            android:layout_marginLeft="70dp"
            android:textSize="20sp"
            android:layout_alignParentLeft="false" />

        <com.game.hy.vivo.SwitchButton
            android:id="@+id/switch3"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/switch2"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="MAIN MENU"
            android:id="@+id/button24"
            android:layout_below="@+id/spinner"
            android:layout_marginTop="30dp"
            android:background="@mipmap/sborder2"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/textView33"
            android:entries="@array/country_arrays"
            android:prompt="@string/country_prompt"
            android:spinnerMode="dropdown"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:popupBackground="#e3e3e3"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Language"
            android:id="@+id/textView53"
            android:layout_below="@+id/textView33"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="35dp"
            android:textColor="#FF34495E"
            android:textSize="20sp"
            android:layout_alignParentLeft="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/header2"
            android:background="@mipmap/sborder1">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/cancelbtn"
                android:background="@mipmap/leftbackarrow2"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="OPTIONS"
                android:id="@+id/textView11"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView44"
            android:src="@mipmap/notification"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/header2"
            android:layout_marginLeft="-2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView45"
            android:src="@mipmap/sound1"
            android:layout_below="@+id/imageView44"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView46"
            android:layout_below="@+id/imageView45"
            android:src="@mipmap/vibration"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView47"
            android:src="@mipmap/language"
            android:layout_below="@+id/imageView46"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/header2"
            android:id="@+id/first1"></FrameLayout>





    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainlayout"
        android:visibility="visible"
        android:background="@mipmap/optionbackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No Recorded Previous Game"
            android:id="@+id/textView6"
            android:layout_marginBottom="151dp"
            android:textColor="#090909"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/button12"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginEnd="34dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="Create New Game"
            android:id="@+id/button5"
            android:background="@mipmap/sborder2"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/vivofrm" />


        <Button
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="Contact"
            android:id="@+id/buttoncontact"
            android:background="@mipmap/sborder4"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/faqbutton" />



        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:id="@+id/button6"
            android:layout_marginLeft="120dp"
            android:background="@mipmap/sborder2"
            android:layout_below="@+id/button5"
            android:layout_marginTop="30dp"
            android:visibility="invisible" />
        <!-- sign-out button -->
        <Button
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="OPTIONS"
            android:id="@+id/option"
            android:layout_below="@+id/button5"
            android:layout_marginTop="30dp"
            android:background="@mipmap/sborder1"
            android:layout_centerHorizontal="true" />


        <Button
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="CREDITS"
            android:id="@+id/faqbutton"
            android:layout_below="@+id/option"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/sborder4"
            android:visibility="gone" />

        <Button
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text="QUIT"
            android:id="@+id/quitbutton"
            android:visibility="invisible"
            android:layout_below="@+id/buttoncontact"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/sborder5" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:id="@+id/vivofrm"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView18"
                    android:src="@mipmap/vivoentsmall2"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentLeft="false"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/faqlayout"
        android:background="@mipmap/layoutbackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Project Coordinator"
            android:id="@+id/textView28"
            android:textColor="#d86b62"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hüseyin Alaca"
            android:id="@+id/textView29"
            android:textColor="#FF34495E"
            android:layout_below="@+id/textView28"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Project Designer"
            android:id="@+id/textView31"
            android:layout_below="@+id/textView29"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#d86b62" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hüseyin Alaca"
            android:id="@+id/textView32"
            android:textColor="#1d1d1d"
            android:layout_below="@+id/textView31"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chief Developer"
            android:id="@+id/textView35"
            android:textColor="#d86b62"
            android:layout_below="@+id/textView32"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Yiğit Erbaş"
            android:id="@+id/textView36"
            android:textColor="#000000"
            android:layout_below="@+id/textView35"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/sborder4"
            android:id="@+id/header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CREDITS"
                android:id="@+id/textView14"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center_vertical|center|center_horizontal" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button22"
                android:background="@mipmap/leftbackarrow2"
                android:visibility="visible"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chief Marketing Officer"
            android:id="@+id/textView56"
            android:textColor="#d86b62"
            android:layout_below="@+id/textView36"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Yiğit Erbaş"
            android:id="@+id/textView57"
            android:textColor="#000000"
            android:layout_below="@+id/textView56"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/introfrm"
        android:background="#ffffff">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView28"
            />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/intro2"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-400dp"
            android:visibility="invisible">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView48"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="false"
                android:src="@mipmap/vivo9" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-300dp"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView29"
                android:src="@mipmap/vivo9" />

        </FrameLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView40"
            android:src="@mipmap/viv3"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView53"
            android:src="@mipmap/vivobros" />


    </RelativeLayout>

</RelativeLayout>
